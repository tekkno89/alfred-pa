# Database
DATABASE_URL=postgresql://alfred:alfred@localhost:5432/alfred
REDIS_URL=redis://localhost:6379

# LLM Configuration
# DEFAULT_LLM determines which provider to use:
#   - "gemini-1.5-pro" -> Vertex AI Gemini (default)
#   - "claude-3-5-sonnet@20240620" -> Vertex AI Claude
#   - "openrouter/anthropic/claude-3.5-sonnet" -> OpenRouter
DEFAULT_LLM=gemini-1.5-pro

# OpenRouter (https://openrouter.ai) - recommended for local dev
OPENROUTER_API_KEY=sk-or-your-api-key

# Vertex AI (for production with Workload Identity, or local with service account)
VERTEX_PROJECT_ID=your-gcp-project
VERTEX_LOCATION=us-central1
# For local dev with Vertex AI, set path to service account key:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Frontend
VITE_API_URL=http://localhost:8000
VITE_GOOGLE_CLIENT_ID=your-google-client-id
